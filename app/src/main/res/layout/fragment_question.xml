<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="raistudio.testandpractice.QuestionFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <TextView
            android:id="@+id/question_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/title_text_size"
            android:layout_marginTop="16dp"
            android:paddingTop="@dimen/element_spacing"/>

        <ImageView
            android:id="@+id/image1_view"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_marginTop="16dp"
            android:layout_below="@id/question_view"
            android:adjustViewBounds="true"
            android:paddingTop="@dimen/element_spacing"/>

        <ImageView
            android:id="@+id/image2_view"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_marginTop="16dp"
            android:layout_below="@id/image1_view"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/image3_view"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_marginTop="16dp"
            android:layout_below="@id/image2_view"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/image4_view"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_marginTop="16dp"
            android:layout_below="@id/image3_view"
            android:adjustViewBounds="true"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image4_view"
            android:id="@+id/answer1_card_view"
            app:cardCornerRadius="1dp"
            android:layout_marginTop="@dimen/element_spacing"
            android:layout_marginLeft="@dimen/element_spacing"
            android:layout_marginRight="@dimen/element_spacing">

            <TextView
                android:id="@+id/answer1_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="anser1"
                android:textSize="@dimen/normal_text_size"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/answer1_card_view"
            android:id="@+id/answer2_card_view"
            app:cardCornerRadius="1dp"
            android:layout_marginTop="@dimen/element_spacing"
            android:layout_marginLeft="@dimen/element_spacing"
            android:layout_marginRight="@dimen/element_spacing">

            <TextView
                android:id="@+id/answer2_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="anser1"
                android:textSize="@dimen/normal_text_size"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/answer2_card_view"
            android:id="@+id/answer3_card_view"
            app:cardCornerRadius="1dp"
            android:layout_marginTop="@dimen/element_spacing"
            android:layout_marginLeft="@dimen/element_spacing"
            android:layout_marginRight="@dimen/element_spacing">

            <TextView
                android:id="@+id/answer3_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="anser1"
                android:textSize="@dimen/normal_text_size"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/answer3_card_view"
            android:id="@+id/answer4_card_view"
            app:cardCornerRadius="1dp"
            android:layout_marginTop="@dimen/element_spacing"
            android:layout_marginLeft="@dimen/element_spacing"
            android:layout_marginRight="@dimen/element_spacing"
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/answer4_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="anser1"
                android:textSize="@dimen/normal_text_size"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="3dp"/>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</ScrollView>
